<?xml version='1.0' encoding='utf-8'?>
<widget id="com.mattgriffin.superuser-reader" version="0.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Superuser</name>
    <description>
        A sample Apache Cordova application that reads the OpenStack Superuser feed and displays the results.
    </description>
    <author email="me@mattgriffin.com" href="https://twitter.com/@mattpgriffin">
        Matt Griffin
    </author>
    <content src="index.html" />
    <access origin="*" />

    <preference name = "StatusBarOverlaysWebView" value="false" />
    <!-- edit this to change the background color of your statusbar -->
    <preference name="StatusBarBackgroundColor" value="#02233c" />

    <preference name = "EnableViewportScale" value="true" />
    <preference name = "DisallowOverscroll" value="true" />

    <platform name="ios">     
              <!-- iOS 7.0+ -->
              <!-- iPhone / iPod Touch  -->
              <icon src="res/icon/ios/Icon-60.png" width="60" height="60" />
              <icon src="res/icon/ios/Icon-60@2x.png" width="120" height="120" />
              <!-- iPad -->
              <icon src="res/icon/ios/Icon-76.png" width="76" height="76" />
              <icon src="res/icon/ios/Icon-76@2x.png" width="152" height="152" />
              <!-- iOS 6.1 -->
              <!-- Spotlight Icon -->
              <icon src="res/icon/ios/Icon-40.png" width="40" height="40" />
              <icon src="res/icon/ios/Icon-40@2x.png" width="80" height="80" />
              <!-- iPhone / iPod Touch -->
              <icon src="res/icon/ios/Icon.png" width="57" height="57" />
              <icon src="res/icon/ios/Icon@2x.png" width="114" height="114" />
              <!-- iPad -->
              <icon src="res/icon/ios/Icon-72.png" width="72" height="72" />
              <icon src="res/icon/ios/Icon-72@2x.png" width="144" height="144" />
              <!-- iPhone Spotlight and Settings Icon -->
              <icon src="res/icon/ios/Icon-small.png" width="29" height="29" />
              <icon src="res/icon/ios/Icon-small@2x.png" width="58" height="58" />
              <!-- iPad Spotlight and Settings Icon -->
              <icon src="res/icon/ios/Icon-50.png" width="50" height="50" />
              <icon src="res/icon/ios/Icon-50@2x.png" width="100" height="100" />
     </platform>

     <platform name="android">
              <icon src="res/icon/android/drawable-ldpi/ic_launcher.png" density="ldpi" />
              <icon src="res/icon/android/drawable-mdpi/ic_launcher.png" density="mdpi" />
              <icon src="res/icon/android/drawable-hdpi/ic_launcher.png" density="hdpi" />
              <icon src="res/icon/android/drawable-xhdpi/ic_launcher.png" density="xhdpi" />
     </platform>

</widget>
